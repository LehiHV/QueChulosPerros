                                                                                                                    </div>
                                                                                                                    <div class="inputBox">
                                                                                                                        <input @bind="pet.Phone = c.Phone" type="text" required>
                                                                                                                        <span class="user">Telefono</span>
                                                                                                                        <ValidationMessage For="@(() => pet.Phone)" />
                                                                                                                    </div>
