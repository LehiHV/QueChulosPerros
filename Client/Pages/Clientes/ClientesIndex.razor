    }
    private void AgregarMascota()
    {
        // Implementa la lógica para agregar un cliente si es necesario
    }

    private async Task ToggleMascotas(int clienteId)
    {
        if (ClientesConMascotasVisibles.ContainsKey(clienteId))
        {
            ClientesConMascotasVisibles[clienteId] = !ClientesConMascotasVisibles[clienteId];
        }
        else
        {
            ClientesConMascotasVisibles[clienteId] = true;
        }

        if (ClientesConMascotasVisibles[clienteId])
        {
            // Obtén las mascotas vinculadas al cliente seleccionado
            MascotasCliente = await http.GetFromJsonAsync<List<Mascota>>($"api/Mascotas/ByClienteId/{clienteId}");
        }
        else
        {
            MascotasCliente = null;
        }

        StateHasChanged(); // Actualiza la interfaz de usuario para reflejar los cambios
    }
}
